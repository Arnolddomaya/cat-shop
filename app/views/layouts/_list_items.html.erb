<% unless @items.empty? %>
  <ul class:"items-list">
    <% @items.each do |item| %>
      <li>
        <%=link_to image_tag("cats/"+item.image_url, size:"300x300"), item  %>
        <% if user_signed_in? %>
          <% unless current_user.cart.items.include?(item) %>
            <%= link_to " | Ajouter |", add_path(item_id: item.id, user_id: current_user.id), method: :post %>
          <% else  %>
            <%= link_to "| Retirer | ", remove_path(item_id: item.id, user_id: current_user.id),  method: :delete %>
          <% end  %>
        <% end %>


      </li>
    <% end  %>
  </ul>

<% else %>
  <%= "pas d'item pour l'instant" %>
<% end  %>
